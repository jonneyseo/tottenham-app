<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.assignment2" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="TOT">Tottenham Hotspur</name>
    <description>
        British football club Tottenham Hotspur's fansite.
    </description>
    <author email="jseo45@my.bcit.ca" href="https://www.bcit.ca/">
        John Seo
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <resource-file src="res/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="mdpi" foreground="res/icon/android/mdpi_fore.png" />
        <icon background="@color/background" density="hdpi" foreground="res/icon/android/hdpi_fore.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/icon/android/xhdpi_fore.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/icon/android/xxhdpi_fore.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/xxxhdpi_fore.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
</widget>
